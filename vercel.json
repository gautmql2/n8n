{
  "version": 2,
  "builds": [
    {
      "src": "packages/cli/bin/n8n",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/packages/cli/bin/n8n"
    }
  ],
  "env": {
    "N8N_HOST": "your-vercel-app.vercel.app",
    "N8N_PORT": "3000",
    "N8N_PROTOCOL": "https",
    "N8N_ENCRYPTION_KEY": "your-encryption-key-here"
  }
}